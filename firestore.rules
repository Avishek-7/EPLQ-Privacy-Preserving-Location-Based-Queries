rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write their own profile documents
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow users to read and write their own privacy settings
    match /privacy_settings/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow users to read and write their own location data
    match /user_locations/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow users to read and write their own encrypted queries
    match /encrypted_queries/{queryId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
    // Admin access (replace with your admin email/UID)
    match /{document=**} {
      allow read, write: if request.auth != null && 
        request.auth.token.email == "avishekkumar7550@gmail.com";
    }
    
    // Public read access for system configuration (if needed)
    match /system/{document} {
      allow read: if true;
      allow write: if request.auth != null && 
        request.auth.token.email == "avishekkumar7550@gmail.com";
    }
  }
}
